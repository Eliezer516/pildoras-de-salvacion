---
layout: base.njk
---

<main class="post-content">
  <h1>{{ title }}</h1>
  <div class="info">
    <span class="date">{{date | readableDate}}</span>
    <span class="read-time">{{ content | emojiReadTime }}</span>
  </div>
  <div class="tags">
    {% for tag in tags %}
      #{{ tag }}
    {% endfor %}
  </div>
  {% if postImg %}
    <img src="{{ postImg }}" alt="{{ title }}">
  {% endif %}
  {{ content | safe }}
</main>